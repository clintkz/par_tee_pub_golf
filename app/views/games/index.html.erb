<div class="container-courses">
    <div class="container-parent">

  <h3>My Games</h3>
<div class="card-heading">
  <h3>Games I've Created</h3>
  </div>
  <ul>
    <% @created_games.each do |game| %>
      <li><%= link_to game.course.name, game_path(game), class: 'btn btn-primary' %> </li>
       <%= link_to chatroom_path(game.chatroom) do %>
      <div class="btn btn-primary">Chat</div>
      <% end %>
    <% end %>
  </ul>
<div class="card-heading">
  <h4>Games I've Been Invited To</h4>
  <ul>
    <% @invited_games.each do |game| %>
      <li><%= link_to game.course.name, game_path(game), class: 'btn btn-primary'%> </li>
       <%= link_to chatroom_path(game.chatroom) do %>
      <div class="btn btn-primary">Chat</div>
      <% end %>
    <% end %>
  </ul>
</div>
</div>
</div>
