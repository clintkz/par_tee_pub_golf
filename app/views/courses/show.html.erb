<div class="container-courses">
  <div class="container-parent">

    <h3>Hi, <%= current_user.first_name %></h3>

      <div class="card-pub">
        <h6><strong>These are the pubs in the <%= @course.name %> course in <%= @course.location %>:</h6>
      </div>

        <% @pubs.each do |pub| %>
      <div class="card-pub">
          <h6 class="pub-name" ><%= link_to pub.name, pub_path(pub.id), class:"card-pub-link" %></h6><hr>
          <p class="pub-address"><%= pub.address %></p>
          <p class="pub-drink"><%= pub.drink %></p>
      </div>
        <% end %>

    <div class="d-grid gap-2">
      <%= link_to "Create Game", new_course_game_path(@course), class: "btn btn-primary" %>
    </div>

  </div>
</div>
