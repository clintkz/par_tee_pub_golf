
<div class="container-courses">
  <div class="header-section">
    <h5><strong>Welcome to Par-tee, the pub golf game!   Select one of the courses below and let the fun begin!</strong></h5>
  </div>

    <% @courses.each do |course| %>
      <div class="card-pub">
        <h6><%= link_to course.name, course_path(course), class:"card-pub-link" %></h6>
      <!--</div>

      <div class="card-map">-->
        <div style="width: 100%; height: 200px;"
          data-controller="map"
          data-map-markers-value="<%= params["#{course.name}"].to_json %>"
          data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
        </div>
      </div>
    <% end %>

  <div class="d-grid gap-2">
    <%= link_to "Rate this app", ratings_path, class: "btn btn-primary" %>
  </div>

</div>

