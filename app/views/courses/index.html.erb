<div class="container-courses">
  <div class="header-section">
    <div class="card-pub-green">
      <h6>Choose from the exciting courses below and let the fun begin!</h6>
    </div>
  </div>
  <% @courses.each do |course| %>
    <div class="card-pub">
      <h5><%= link_to course.name, course_path(course), class:"card-pub-link" %></h5>
      <div style="width: 100%; height: 200px;"
          data-controller="map"
          data-map-markers-value="<%= params["#{course.name}"].to_json %>"
          data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>
  <% end %>
</div>
