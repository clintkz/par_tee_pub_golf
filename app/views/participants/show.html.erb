<div class="container-courses">
  <div class="card-pub-green">
    <h4>Hey <%= @user_first_name %>,
      you're playing the <%= @course.name %> course</h4>
  </div>
  <div class="card-pub accordian accordian-flush" id="accordianFlushExample">
    <h6 class="pub-name"><%= @pub.name  %></h6>
    <p class="pub-address">Addresss: <%= @pub.address %></p>
    <p class="pub-drink">Drink: <%= @pub.drink %></p>
    <p class="pub-strokes">Par: <%= @pub.strokes %></p>
    <div class="accordian-item">
      <h2 class="accordion-header" id="flush-headingOne">
        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseOne" aria-expanded="false" aria-controls="flush-collapseOne"><strong><em>
              Click here for the pub rules
            </button><strong></em>
          </h2>
        </div>
        <br>
        <div id="flush-collapseOne" class="accordion-collapse collapse" aria-labelledby="flush-headingOne" data-bs-parent="#accordionFlushExample">
          <div class="accordion-body">
            <p><%= @pub.rules%> </p>
          </div>
        </div>
        <%= simple_form_for [@participant, @pub_score] do |form| %>
          <%= form.input :score, placeholder:"Input your score here", label: false%>
          <%= form.input :pub_id, as: :hidden%>
          <%= form.button :submit, "Submit Score", class: "btn btn-primary w-100" %>
        <% end %>
      </div>
    </div>
    <!--</div>-->
    <!--</div>-->
    <!-- <div class="container-courses">-->
    <%# if @last_element == false %>
    <%#= link_to 'Next Pub', participant_path(pub_id: @pub.id) %>
    <%# else %>
    <%#= link_to 'Final Scores', scorecard_game_path(@game) %>
    <%#end%>
